<div class="inner">
  <div class="masthead clearfix">
    <h3 class="masthead-brand"> 
    <a class="fudotitle" href="/"> {{ title }} </a> 
    </h3>
    <nav class="nav nav-masthead">
      <!--<a class="nav-link active" href="#">Home</a>-->
      {{#if isLoggedIn}}
      <a class="nav-link" onclick="document.getElementById('addpostdiv').style.display='block'"><img src="../../images/upload.png" style="height:30px; width:30px; cursor: pointer;"></a>
      {{/if}}
      <a class="nav-link" href="/newsfeed"><img src="../../images/worldicon_black.png" style="height:30px; width:30px"></a>
      {{#unless isLoggedIn}}
      <a class="nav-link" href="/login"><img src="../../images/loginicon_black.png" style="height:30px; width:30px"></a>
      {{/unless}}
      {{#if isLoggedIn}}
      <a class="nav-link" href="/myprofile"><img src="../../images/myprofileicon_black.png" style="height:30px; width:30px"></a>
      <a class="nav-link" href="/logout"><img src="../../images/logouticon_black.png" style="height:30px; width:30px"></a>
      {{/if}} 
    </nav>
  </div>
</div>

<div id="addpostdiv" class="w3-row w3-modal">
  <span class="w3-closebtn w3-text-white w3-opacity w3-hover-opacity-off w3-xxlarge w3-container w3-display-topright" id="addpost-hide">x</span>
  <div class="w3-modal-content w3-center w3-padding-24" style="background-color: rgba(255,255,255,.9); border-radius: 40px 0 40px 0">

  <div class="w3-container">
    <div class="w3-col l6 w3-center w3-container" id="theleft" style="height:400px; width:400px">
        <button type="button" id="upload-btn" style="cursor:pointer" class="btn w3-centered action-button">Upload</button>

    <div class="w3-center" style="margin:auto; height:400px; width:400px; position:relative;">
      <input id="upload-input" class="hidden" type="file" name="uploads[]">
      <input type="text" id="postImage" class="hidden" name="postImage">
      <p class="upload-output output" ></p>
      <div id="loading" class="hidden w3-center"> </div>
    </div>

    </div>

    <div class="w3-col l6 w3-container w3-center" id="theright">
      <input type="text" id="postTitle" placeholder="Title" name="postTitle"> <br>

      <input type="checkbox" name="hasRecipe" id="hasRecipe" style="margin-top: 30px" value="yes"> This post contains a recipe.

      <textarea name="postCaption" id="postCaption" placeholder="Recipe, Description, More Information..." style="margin: 20px; padding:20px; height: 270px; width: 340px; resize: none; color: rgba(0,0,0,.95); font-size: 15px "></textarea>
      <button type="button" id="postSubmit" class="btn action-button w3-centered" style="cursor:pointer">Post</button>
      <p class="post-output error-output"></p>
    </div>
  </div>

  </div>
</div>
<body>
  {{> navbar-new }}

  <div class="register">
  <h1>R E G I S T E R</h1>
  
  <div class="forminfo">
    <!-- multistep form -->
    <form id="msform" name="signup" method="post" action="/signup">
      <!-- progressbar -->
      <ul id="progressbar">
        <li class="active">Account Setup</li>
        <li>About Me</li>
        <!-- <li>Personal Details</li> -->
      </ul>
    <!-- fieldsets -->
    <fieldset>
      <!-- <h3 class="fs-subtitle">This is step 1</h3> -->
      <input type="text" name="name" placeholder="Name" id="name" class="name" required="required"/> 
      <input type="text" name="username" placeholder="Username" id="username" class="username" required="required"/> 
      <p class="username-output error-output"></p> 
      <input type="text" class="username-valid hidden" value="false">
      <input type="password" name="password" placeholder="Password" id="password" class="password" required="required"/> 
      <!-- <p class="password-output error-output"></p>  -->
      <input type="password" name="cpassword" placeholder="Confirm Password" id="cpassword" class="cpassword" required="required"/> 
      <p class="cpassword-output output"></p> 
      <input type="button" id="next" name="next" class="next action-button" value="Next" />
      <p class="next-output error-output"></p> 
    </fieldset>
    <fieldset>
      <h2 class="fs-title" style="color:rgba(0,0,0,0.9)">A D D I T I O N A L</h2>
      <h3 class="fs-subtitle" style="color:rgba(0,0,0,0.9)">This is optional. You can always edit your information later.</h3>
      <input type="text" name="email" id="email" class="email" placeholder="Email" /> 
      <input type="text" name="phone" id="phone" class="phone" placeholder="Phone Number" /> 
      <textarea name="about" cols="40" rows="5" placeholder="About Me"></textarea>
      <input type="button" name="previous" class="previous action-button" value="Previous"/>
      <button type="button" class="presubmit action-button">Sign Up</button>
      <button type="submit" class="submit action-button hidden" id="submit">Sign Up</button>
      <p class="submit-output error-output"></p>
    </fieldset>
